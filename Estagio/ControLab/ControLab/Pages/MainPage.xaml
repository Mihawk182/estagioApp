        <!--<Button Clicked="EsqueceuButton_Clicked" Text="Esqueceu sua senha?"
                FontSize="Micro"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>-->

        <Label x:Name="MainLabel"
